                android:layout_marginEnd="5dp">
            </TextView>
            <RatingBar
                android:layout_width="150dp"
                android:layout_height="wrap_content">
            </RatingBar>
            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/textbotohotels"
                android:id="@+id/b3">
            </Button>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>